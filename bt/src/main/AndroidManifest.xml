<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gonzalch.blackjacktutorial.bt" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameRulesActivity"
            android:label="@string/title_activity_game_rules" >
        </activity>
        <activity
            android:name="gfx.PokerTableActivity"
            android:label="@string/title_activity_poker_table" >
        </activity>
        <activity
            android:name=".activities.BlackjackTableActivity"
            android:label="@string/title_activity_blackjack_table" >
        </activity>
    </application>

</manifest>
